<?xml version="1.0"?>

<robot name="BallAndPaddle">
    <link name="paddle">
        <inertial>
            <mass value=".1" />
        </inertial>
        <visual>
            <geometry>
                <box size="10 10 .005" />
            </geometry>
            <material>
                <color rgba="1 0 0 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size=".1 .1 .005" />
            </geometry>
            <drake:proximity_properties drake:mu_static="0.25" drake:mu_dynamic="0.2" />
        </collision>
    </link>

    <link name="ball">
        <inertial>
            <mass value=".001" />
            <inertia ixx="6.666e-8" iyy="6.666e-8" izz="6.666e-8" ixy="0" ixz="0" iyz="0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <material>
                <color rgba="0 1 0 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <drake:proximity_properties drake:mu_static="0.25" drake:mu_dynamic="0.2" />
        </collision>
    </link>


    <joint name="paddle_fixed" type="fixed">
        <parent link="world" />
        <child link="paddle" />
        <origin xyz="0 0 -.0025" rpy="0 0 0" />
    </joint>

</robot>