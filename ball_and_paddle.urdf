<?xml version="1.0"?>

<robot name="BallAndPaddle">
    <link name="paddle_head">
        <inertial>
            <mass value=".042" />
            <inertia ixx="6.8096e-5" iyy="6.8096e-5" izz="1.344e-4" />
        </inertial>
        <visual>
            <geometry>
                <cylinder radius=".08" length=".016" />
            </geometry>
            <material>
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <link name="paddle_handle">
        <inertial>
            <mass value=".008" />
            <inertia ixx="7.7.0046666667e-6" iyy="7.7.0046666667e-6" izz="6.76e-7" />
        </inertial>
        <visual>
            <geometry>
                <cylinder radius=".013" length=".1" />
            </geometry>
            <material>
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>

    <link name="ball">
        <inertial>
            <mass value=".0027" />
            <inertia ixx="6.666e-8" iyy="6.666e-8" izz="6.666e-8" ixy="0" ixz="0" iyz="0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.02" />
            </geometry>
            <material>
                <color rgba="0 1 0 1" />
            </material>
        </visual>
        <!-- <collision>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
            <drake:proximity_properties drake:mu_static="0.25" drake:mu_dynamic="0.2" />
        </collision> -->
    </link>


    <joint name="paddle_fixed" type="fixed">
        <parent link="paddle_handle" />
        <child link="paddle_head" />
        <origin xyz="0 0 .09" rpy="1.5707963268 0 0" />
    </joint>

    <!-- paddle handle and ball are free -->

</robot>